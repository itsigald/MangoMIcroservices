@model CouponDto

<form asp-action="CouponUpdate">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Update Coupon</h1>
        <input asp-for="CouponId" hidden />
        <hr />

        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px">Coupon Code</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CouponCode" class="form-control" />
                <span asp-validation-for="CouponCode" class="text-danger" />
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px">Discount Amount</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="DiscountAmount" class="form-control" />
                <span asp-validation-for="DiscountAmount" class="text-danger" />
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px">Minimun Amount</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="MinAmount" class="form-control" />
                <span asp-validation-for="MinAmount" class="text-danger" />
            </div>
        </div>
        <div class="row">
            <div class="col-5 offset-2">
                <a asp-action="CouponIndex" class="btn btn-primary form-control">Bsck to list</a>
            </div>

            <div class="col-5">
                <input class="btn btn-success form-control" type="submit" value="Update" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}